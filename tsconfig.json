{
  "compilerOptions": {
    "target": "es5",
    // "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "es6", "es2017"],
    "types": ["element-plus/global"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "package/webcomponents/index.ts", "package/webcomponents/index.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
